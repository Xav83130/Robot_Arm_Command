<Desktop>:

#connection

    GridLayout:
        orientation: 'horizontal'
        rows: 2
        cols: 3
        row_default_height: 26
        size: 550, 55
        pos: 0, 530
        Label:
            text: 'Port :'
            font_size: 18
            bold: True
            size_hint_x: None
        Spinner:
            id: serialport
            height: 32
            width: 200
            text: 'Select port'
            values: app.serial_list()
            size_text: 14
            multiline: False
            size_hint_x: 50
        Button:
            id: connect
            height: 33
            width: 100
            text: 'Connection'
            on_press: app.connect()
            size_hint_x: None
        Label:
            pos: 0, 485
            text: 'Baud :'
            font_size: 18
            bold: True
            size_hint_x: None
        Spinner:
            id: baudrate
            height: 32
            width: 200
            pos: 90, 520
            text: '115200'
            values: ["9600","14400","19200","28800","38400","57600","115200"]
        Button:
            id: disconnect
            height: 33
            width: 100
            text: 'Déconnecter'
            on_press: app.disconnect()
            size_hint_x: None

